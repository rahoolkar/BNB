<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3><%= data.title %></h3>
        </div>
        <div class="col-6 offset-3">
            <div class="card show-card">
                <img src="<%= data.image %>" class="card-img-top show-img" alt="listing-image">
                <div class="card-body">
                    <p class="card-text">
                        <p><%= data.description %></p>
                        <p>&#8377; <%= data.price.toLocaleString('en-IN') %></p>
                        <p><%= data.location %></p>
                        <p><%= data.country %></p>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="btns mb-3">
        <a href="/listings/<%= data._id %>/edit" class="btn btn-primary col-1 offset-3 edit-btn">Edit</a>
        <form action="/listings/<%= data._id %>?_method=DELETE" method="post">
            <button class="btn btn-dark offset-5">Delete</button>
        </form>
    </div> 
</body>
