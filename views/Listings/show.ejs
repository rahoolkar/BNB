<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3>Listing Details</h3>
        </div>
        <div class="col-6 offset-3">
            <div class="card show-card">
                <img src="<%= data.image %>" class="card-img-top show-img" alt="listing-image">
                <div class="card-body">
                    <h5 class="card-title"><%= data.title %></h5>
                    <p class="card-text">
                        <ul>
                            <li><%= data.title %></li>
                            <li><%= data.description %></li>
                            <li>&#8377; <%= data.price.toLocaleString('en-IN') %></li>
                            <li><%= data.location %></li>
                            <li><%= data.country %></li>
                        </ul>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="btns mb-3">
        <a href="/listings/<%= data._id %>/edit" class="btn btn-primary col-1 offset-3 edit-btn">Edit</a>
        <form action="/listings/<%= data._id %>?_method=DELETE" method="post">
            <button class="btn btn-dark offset-5">Delete</button>
        </form>
    </div> 
</body>
